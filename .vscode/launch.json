{
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Edge",
      "request": "launch",
      "type": "msedge",
      "url": "http://localhost:4200",
      "webRoot": "${workspaceFolder}",
      "sourceMapPathOverrides": {
        "/app/webpack:/*": "${workspaceRoot}/*"
      }
    },
    {
      "name": "Launch Chrome",
      "request": "launch",
      "type": "chrome",
      "url": "http://localhost:4200",
      "webRoot": "${workspaceFolder}",
      "sourceMapPathOverrides": {
        "/app/webpack:/*": "${workspaceRoot}/*"
      }
    },
    {
      "name": "Launch Firefox",
      "request": "launch",
      "type": "firefox",
      "url": "http://localhost:4200",
      "pathMappings": [
        { "url": "/app/webpack:///~/", "path": "${workspaceFolder}/node_modules/" },
        { "url": "/app/webpack:///./~/", "path": "${workspaceFolder}/node_modules/" },
        { "url": "/app/webpack:///./", "path": "${workspaceFolder}/" },
        { "url": "/app/webpack:///src/", "path": "${workspaceFolder}/src/" },
        { "url": "/app/webpack:///node_modules/", "path": "${workspaceFolder}/node_modules/" },
        { "url": "/app/webpack:///webpack", "path": null },
        { "url": "/app/webpack:///(webpack)", "path": null },
        { "url": "/app/webpack:///pages/", "path": "${workspaceFolder}/pages/" },
        { "url": "/app/webpack://[name]_[chunkhash]/node_modules/", "path": "${workspaceFolder}/node_modules/" },
        { "url": "/app/webpack://[name]_[chunkhash]/", "path": null },
        { "url": "/app/webpack:///", "path": "" },
      ],
    },
    {
      "name": "ng test",
      "type": "chrome",
      "request": "launch",
      "preLaunchTask": "npm: test",
      "url": "http://localhost:9876/debug.html"
    }
  ]
}
